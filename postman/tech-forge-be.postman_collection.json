    {
      "name": "Auth - Cookie Mode",
      "description": "Run these when AUTH_TRANSPORT_MODE=cookie. Keep Postman cookies enabled.",
      "item": [
        {
          "name": "1) Get CSRF Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var json = pm.response.json();",
                  "var token = json && json.data ? json.data.csrfToken : null;",
                  "if (token) {",
                  "  pm.collectionVariables.set('csrf_token', token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/csrf-token",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "csrf-token"
              ]
            }
          },
          "response": []
        },
